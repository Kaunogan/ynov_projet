<!DOCTYPE html>
<html lang="fr">

<head>
    <title>Blog Ynov | Accueil</title>
    <meta charset="UTF-8">
    <link rel="icon" type="image/png" href="/img/logo.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Favicon -->
    <link href="/img/favicon.ico" rel="shortcut icon" />

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com//css?family=Roboto:400,400i,500,500i,700,700i,900,900i" rel="stylesheet">

    <!-- Stylesheets -->
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/font-awesome.min.css" />
    <link rel="stylesheet" href="/css/slicknav.min.css" />
    <link rel="stylesheet" href="/css/owl.carousel.min.css" />
    <link rel="stylesheet" href="/css/magnific-popup.css" />
    <link rel="stylesheet" href="/css/animate.css" />
    <!-- Main Stylesheets -->
    <link rel="stylesheet" href="/css/style.css" />

    <!-- JS -->
    <script src="/js/jquery-3.2.1.min.js"></script>

    <!--[if lt IE 9]>
		  <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min./js"></script>
	  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min./js"></script>
	<![endif]-->

</head>

<body>
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <!-- Header section -->
    <header class="header-section">
        <div class="header-bar-warp d-flex">
            <!-- site logo -->
            <form action="/blogYnov/userconnected/submit/" method="post">
                <button class="img_logo site-logo">
                    <img src="/img/logo.png" alt="">
                </button>
            </form>
            <nav class="top-nav-area w-100">
                <div class="user-panel">
                    <form action="/submit/signout" method="post">
                        <button class="btn_logout">Deconnexion</button>
                    </form>
                </div>
                <!-- Menu -->
                <ul class="main-menu primary-menu">
                    <p style="color: white; margin-right: 13%;">Vous devez être connecté pour accéder aux
                        fonctionnalitées du Blog</p>
                </ul>
            </nav>
        </div>
        </div>
    </header>
    <!-- Header section end -->


    <!-- Intro section -->
    <section class="hero-section overflow-hidden">
        <div class="hero-slider owl-carousel">
            <div class="hero-item set-bg d-flex align-items-center justify-content-center text-center"
                data-setbg="/img/background.png">
                <div class="container">
                    <h2></h2>
                    <p></p>
                    <a href="#" class="site-btn btn_guest">Invité</a>
                </div>

            </div>
        </div>
    </section>
    <!-- Intro section end-->

    <!-- Blog section -->
    <section class="blog-section spad">
        <div class="container articles_follow">
            <div class="row article_guest">
                <div class="col-xl-9 col-lg-8 col-md-7">
                    <div class="section-title text-white title_article_guest">
                        <h2>Articles</h2>
                    </div>

                    <!-- Blog item -->
                    <% for(var i=0; i < allArticles.length; i++) { %>

                    <script>$(".row").append(

                            "<div class=\"blog-item\">" +

                            "<div class=\"blog-thumb\">" +
                            "<img class=\"logo_article\" src=\"/img/logo_article.svg\">" +
                            "</div>" +

                            "<div class=\"blog-text text-box text-white\">" +
                            "<div class=\"top-meta\"><%- articleCreatedAt[i].date %> par <a href=\"\"><%- allArticles[i].username %></a></div>" +
                            "<h3><%- allArticles[i].title %></h3>" +
                            "<a>Vous devez être connecté pour accéder à la page de l'article !</a>" +

                            "</div>" +
                            "</div>");</script>
                    <% } %>
                </div>
            </div>
        </div>
    </section>
    <!-- Blog section end -->

    <!-- Footer section -->
    <footer class="footer-section">
        <div class="container">
            <img class="footer-logo" src="/img/logo.png" alt="">
            <div class="footer-social d-flex justify-content-center"></div>
            <div class="copyright"><a href="">Colorlib</a> 2018 @ All rights reserved</div>
            <div class="copyright"><a href="">GUMBAU Elric | Lemoine Kaunogan</div>
        </div>
    </footer>
    <!-- Footer section end -->

    <!--====== Javascripts & Jquery ======-->
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/jquery.slicknav.min.js"></script>
    <script src="/js/owl.carousel.min.js"></script>
    <script src="/js/jquery.sticky-sidebar.min.js"></script>
    <script src="/js/jquery.magnific-popup.min.js"></script>
    <script src="/js/main.js"></script>

</body>

</html>